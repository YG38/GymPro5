{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb+srv://your_mongo_uri_here",
    "JWT_SECRET": "your-jwt-secret",
    "EMAIL_USER": "your_email@example.com",
    "EMAIL_PASS": "your_email_password"
  }
}
