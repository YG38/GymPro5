{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    }
  ],
  "env": {
    "MONGO_URI": "your-mongodb-uri",
    "JWT_SECRET": "your-jwt-secret",
    "PORT": "5000"
  }
}
